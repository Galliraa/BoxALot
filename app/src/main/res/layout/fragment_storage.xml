<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StorageFragment"
    android:orientation="vertical"
    android:background="@drawable/white_border">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/storageroomDetailsViewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/garage_depot"
        android:transitionName="@string/storagefragment_marker_transition"/>

    <TextView
        android:id="@+id/priceTvStorageFrag"
        android:layout_below="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/addressTvStorageFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/sizeTvStorageFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="TextView" />
    <TextView
        android:id="@+id/descTvStorageFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="TextView" />

    <Button
        android:id="@+id/contactLandlordBtnStorageFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_landlord_btn_txt" />

</LinearLayout>