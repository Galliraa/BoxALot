<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ScrollView
        android:id="@+id/createStorageroomSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <EditText
            android:id="@+id/countryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_country"
            android:maxLines="1" />

        <EditText
            android:id="@+id/cityET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_city"
            android:maxLines="1" />

        <EditText
            android:id="@+id/addressET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_address"
            android:maxLines="1" />

        <EditText
            android:id="@+id/sizeET"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_size"
            android:maxLines="1" />

        <EditText
            android:id="@+id/priceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_price"
            android:maxLines="1" />

        <EditText
            android:id="@+id/descET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_desc"
            android:maxLength="150"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/ph0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:clipChildren="false"
                android:columnCount="2"
                android:rowCount="2"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ph00"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add_icon"
                    />

                <ImageView
                    android:id="@+id/ph01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/ph02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/ph03"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add_icon" />


            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.33">

        <CheckBox
            android:id="@+id/checkElevator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Elevator"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/checkOwnEntrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Egen indgang"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/checkOwnKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Egen nøgle"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.33">

        <CheckBox
            android:id="@+id/checkParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Elevator"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/checkShortNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Egen indgang"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/checkAllTimeAcces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Egen nøgle"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.33">

        <CheckBox
            android:id="@+id/checkEasyAcces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Elevator"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/checkSharedRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Egen indgang"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/checkOnlyAfterSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/btn_radio"
            android:button="@null"
            android:text="Egen nøgle"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>

    <Button
            android:id="@+id/submitStorageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opret" />

</LinearLayout>
    </ScrollView>


</FrameLayout>