<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateStorageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <EditText
            android:id="@+id/countryET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_country"
            android:maxLines="1" />

        <EditText
            android:id="@+id/cityET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_city"
            android:maxLines="1" />

        <EditText
            android:id="@+id/addressET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_address"
            android:maxLines="1" />

        <EditText
            android:id="@+id/priceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_price"
            android:maxLines="1" />
        <EditText
            android:id="@+id/descET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_room_desc"
            android:maxLength="150"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/ph0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:clipChildren="false"
                android:columnCount="2"
                android:rowCount="2"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ph00"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_icon"
                    />

                <ImageView
                    android:id="@+id/ph01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/ph02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_icon" />

                <ImageView
                    android:id="@+id/ph03"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_rowWeight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_icon" />


            </GridLayout>
        </android.support.constraint.ConstraintLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elevator" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egen adgang"
            android:button="@drawable/acces_radio"/>

    </RadioGroup>

    <Button
            android:id="@+id/submitStorageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opret" />
</LinearLayout>
    </ScrollView>

</LinearLayout>